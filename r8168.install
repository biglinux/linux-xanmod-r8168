rebuild_module_dependencies() {
  EXTRAMODULES=$(find /usr/lib/modules -type d -iname 6.5.7*xanmod* | rev | cut -d "/" -f1 | rev)
  depmod $(find /usr/lib/modules -type d -iname 6.5.7*xanmod* | rev | cut -d "/" -f1 | rev)
}

post_install() {
  rebuild_module_dependencies
}
post_upgrade() {
  rebuild_module_dependencies
}

post_remove() {
  rebuild_module_dependencies
}
